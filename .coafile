[all]
bears = LineCountBear, FilenameBear
files = **.py, **.md
file_naming_convention = snake 
ignore = venv, venv/**, **/__pycache__/**, **/__pycache__, __pycache__, __pycache__/**, **/*.pyc, *.pyc
max_lines_per_file = 1000
max_line_length = 120

[all.python]
bears = PycodestyleBear, PyDocStyleBear
files = **.py
language = Python
editor = vim
ignore = setup.py
max_line_length = 120

[all.yaml]
bears = YAMLLintBear
files = **.yaml, **.yml, .zuul.yaml
ignore = .zuul.yaml
max_line_length = 180

